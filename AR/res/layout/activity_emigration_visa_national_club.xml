<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/form_background_color"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:textSize="@dimen/font_size_large" />

                <EditText
                    android:id="@+id/pinCode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_edittext_height"
                    android:background="@drawable/edittext_default_bg"
                    android:hint="@string/hint_pinCode"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:textSize="@dimen/font_size_large"  />

                <EditText
                    android:id="@+id/clubName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_edittext_height"
                    android:background="@drawable/edittext_default_bg"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:hint="@string/hint_clubName"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:visibility="invisible"
                    android:textSize="@dimen/font_size_large"  />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_edittext_height"
                    android:background="@drawable/edittext_default_bg"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:textSize="@dimen/font_size_large"  />

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_edittext_height"
                    android:background="@drawable/edittext_default_bg"
                    android:hint="@string/hint_firstName"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:textSize="@dimen/font_size_large"  />

                <EditText
                    android:id="@+id/middleName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_edittext_height"
                    android:background="@drawable/edittext_default_bg"
                    android:hint="@string/hint_middleName"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:textSize="@dimen/font_size_large"  />

                <EditText
                    android:id="@+id/familyName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_edittext_height"
                    android:background="@drawable/edittext_default_bg"
                    android:hint="@string/hint_familyName"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:textSize="@dimen/font_size_large"  />

                <com.goys.android.app.widgets.GOYSTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_textview_height"
                    android:padding="5dp"
                    android:text="@string/text_Nationality"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:visibility="invisible"
                    android:textSize="@dimen/font_size_large"  />

                <Spinner
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_spinner_height"
                    android:background="@drawable/dropdown"
                    android:prompt="@string/country_prompt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:textSize="@dimen/font_size_large"  />

                <EditText
                    android:id="@+id/job"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_edittext_height"
                    android:background="@drawable/edittext_default_bg"
                    android:hint="@string/hint_job"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:textSize="@dimen/font_size_large"  />

                <EditText
                    android:id="@+id/passportNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_edittext_height"
                    android:background="@drawable/edittext_default_bg"
                    android:hint="@string/hint_passportNumber"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:visibility="invisible"
                    android:textSize="@dimen/font_size_large"  />

                <EditText
                    android:id="@+id/personalNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_edittext_height"
                    android:background="@drawable/edittext_default_bg"
                    android:hint="@string/hint_personalNumber"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:visibility="invisible"
                    android:textSize="@dimen/font_size_large"  />

                <com.goys.android.app.widgets.GOYSTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_textview_height"
                    android:padding="5dp"
                    android:text="@string/text_RequestType"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:visibility="invisible"
                    android:textSize="@dimen/font_size_large"  />

                <Spinner
                    android:id="@+id/request_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_spinner_height"
                   	android:background="@drawable/dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:visibility="invisible"
                    android:textSize="@dimen/font_size_large"  />

                <com.goys.android.app.widgets.GOYSTextView
                    android:id="@+id/text_residencies"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_textview_height"
                    android:padding="5dp"
                    android:text="@string/text_Residencies"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/residenciesRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/residenceies_option_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/text_residencies_radio_option1"
                    android:textSize="@dimen/font_size_medium" />

                <RadioButton
                    android:id="@+id/residenceies_option_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_residencies_radio_option2"
                    android:textSize="@dimen/font_size_medium" />

                <RadioButton
                    android:id="@+id/residenceies_option_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_residencies_radio_option3"
                    android:textSize="@dimen/font_size_medium" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/visasRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <RadioButton
                    android:id="@+id/visas_option_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/text_visas_option1"
                    android:textSize="@dimen/font_size_medium" />

                <RadioButton
                    android:id="@+id/visas_option_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_visas_option2"
                    android:textSize="@dimen/font_size_medium" />

                <RadioButton
                    android:id="@+id/visas_option_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_visas_option3"
                    android:textSize="@dimen/font_size_medium" />
                
                <RadioButton
                    android:id="@+id/visas_option_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_visas_option4"
                    android:textSize="@dimen/font_size_medium" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/changeJobTitleRadios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <RadioButton
                    android:id="@+id/changeJobTitle_option_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/text_changeJob_option1"
                    android:textSize="@dimen/font_size_medium" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/changeSponsorRadios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <RadioButton
                    android:id="@+id/changeSponsor_option_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/text_changeSponsor_option1"
                    android:textSize="@dimen/font_size_medium" />

                <RadioButton
                    android:id="@+id/changeSponsor_option_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_changeSponsor_option2"
                    android:textSize="@dimen/font_size_medium" />
            </RadioGroup>

            <EditText
                android:id="@+id/other_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/edittext_default_bg"
                android:gravity="left|top"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="6"
                android:minLines="6"
                android:padding="5dp"
                android:visibility="gone" />
            
            <TextView
               	android:id="@+id/label_condition_to_be_met"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_emigration_condition_to_be_met"
                android:textSize="@dimen/font_size_medium"
                android:visibility="gone"
                android:textColor="@color/action_bar_red"
                android:layout_marginTop="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="*"
                    android:textColor="@color/action_bar_red"
                    android:visibility="invisible"
                    android:textSize="@dimen/font_size_large"  />

                <com.goys.android.app.widgets.GOYSTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/emigration_visa_textview_height"
                    android:text="@string/text_attachments"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <Button
                android:id="@+id/chooseFile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/emigration_visa_button_height"
                android:layout_marginTop="18dp"
                android:background="@drawable/choose_file_btn"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:text="@string/text_chooseFile"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_large" />
            <!--  android:background="@color/choosefile_button_color" -->

            <TextView
                android:id="@+id/label_attachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emptyField"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#714"
                android:visibility="gone" />

           <!--  <ListView
                android:id="@+id/attached_files_listview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@color/attachmentListItemSeparatorColor"
                android:dividerHeight="2dp"
                android:visibility="visible" /> -->
                
            <com.goys.android.app.widgets.NestedListView
                android:id="@+id/attached_files_listview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@color/attachmentListItemSeparatorColor"
                android:dividerHeight="2dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/emigration_visa_button_height"
                android:layout_marginTop="18dp"
                android:background="@drawable/choose_file_btn"
                
                android:text="@string/btn_text_clear"
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/font_size_large" />
			<!--  -->
            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/emigration_visa_button_height"
                android:layout_marginTop="18dp"
                android:background="@drawable/choose_file_btn"
                android:text="@string/btn_text_submit"
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/font_size_large"
                android:focusable="false"
                android:focusableInTouchMode="true"
                  />
            <!-- -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>